<h1><%= @title = "Add Drug" %></h1>
<%= link_to image_tag('icons/application_view_list.png'), drugs_path, :class => 'quick_link' %>

<% form_for(@drug) do |f| %>
  <%= f.error_messages %>
	<%= render :partial => 'fields', :locals => {:f => f} %>

  <p>
    <%= f.submit 'Create' %>
  </p>	
<% end %>

