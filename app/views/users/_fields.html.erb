<p>
  <%= f.label :name, 'Real Name' %>
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label :login %>
  <%= f.text_field :login %>
</p>

<p>
  <%= f.label :email %>
  <%= f.text_field :email %>
</p>

<p>
  <%= f.label :password %>
  <%= f.password_field :password %>
</p>

<p>
  <%= f.label :password_confirmation, 'Confirmation' %>
  <%= f.password_field :password_confirmation %>
</p>

<% if !current_user.nil? && current_user.has_role?('administrator') %>
<p>
	 <%= f.label :roles, 'Roles' %>
	<%= select_tag("role_ids[]", options_for_select(Role.find(:all).collect { |r| [r.name, r.id] }, @user.roles.collect { |r| r.id}), {:multiple => true})%>
</p>
<% end %>
